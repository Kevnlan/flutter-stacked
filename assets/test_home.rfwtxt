import local;
import core.widgets;
import core.material;

widget GameGrid = GridView(
   shrinkWrap: true,
  gridDelegate: SliverGridDelegateWithFixedCrossAxisCount(
    crossAxisCount: 2,
    crossAxisSpacing: 5.0,
    childAspectRatio: 0.7,
  ),
  children: [
    ...for attire in args.attires: 
      GestureDetector(
        onTap: event 'attireSelect' {
          id: attire.id,
          link: attire.link
        },
        child: Container(
          decoration: {
            type:"box",
          },
          child: Column(
            children: [
              Text(text: ["Name: ", attire.name]),
              Text(text: ["Amount: ", attire.amount]),
              Text(text: ["Image: ", attire.image_url]),
            ],
          ),
        ),
      )
  ]
);

widget GameList = ListView(
  shrinkWrap: true,
  children: [
    ...for game in args.games: 
      ListTile(
        title: Text(text: game.name),
        subtitle: Text(text: ["Rating: ", game.rating]),
        onTap: event 'gameSelect' {
          id: game.id,
          link: game.link
        }
      )
  ]
);

